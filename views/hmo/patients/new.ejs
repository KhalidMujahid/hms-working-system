<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Register Insured Patient</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Tailwind CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>
  <body class="bg-gray-100 text-gray-800 font-sans">
    <div
      class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-xl rounded-lg transition-all duration-300 ease-in-out"
    >
      <!-- Header -->
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-blue-700 flex items-center gap-2">
          <i class="fas fa-user-plus"></i> Register HMO Patient
        </h2>
        <a href="/hmo/dashboard" class="text-sm text-blue-600 hover:underline">
          <i class="fas fa-arrow-left mr-1"></i> Go to Dashboard
        </a>
      </div>

      <!-- Form -->
      <form action="/hmo/patients/new" method="POST" class="space-y-6">
        <!-- Full Name -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="firstName" class="block font-medium mb-1"
              ><i class="fas fa-user mr-1 text-gray-500"></i> First Name</label
            >
            <input
              type="text"
              id="firstName"
              name="firstName"
              required
              placeholder="e.g. John"
              autocomplete="given-name"
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
            />
          </div>
          <div>
            <label for="lastName" class="block font-medium mb-1"
              ><i class="fas fa-user mr-1 text-gray-500"></i> Last Name</label
            >
            <input
              type="text"
              id="lastName"
              name="lastName"
              required
              placeholder="e.g. Doe"
              autocomplete="family-name"
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
            />
          </div>
        </div>

        <!-- DOB + Gender -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="dob" class="block font-medium mb-1"
              ><i class="fas fa-calendar-alt mr-1 text-gray-500"></i> Date of
              Birth</label
            >
            <input
              type="date"
              id="dob"
              name="dateOfBirth"
              required
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
            />
          </div>
          <div>
            <label for="gender" class="block font-medium mb-1"
              ><i class="fas fa-venus-mars mr-1 text-gray-500"></i>
              Gender</label
            >
            <select
              id="gender"
              name="gender"
              required
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
            >
              <option value="">Select</option>
              <option>Male</option>
              <option>Female</option>
              <option>Other</option>
            </select>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="phone" class="block font-medium mb-1"
              ><i class="fas fa-phone-alt mr-1 text-gray-500"></i> Phone</label
            >
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              placeholder="e.g. +234 700 123 4567"
              autocomplete="tel"
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
            />
          </div>
          <div>
            <label for="email" class="block font-medium mb-1"
              ><i class="fas fa-envelope mr-1 text-gray-500"></i> Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="e.g. user@example.com"
              autocomplete="email"
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
            />
          </div>
        </div>

        <!-- Address -->
        <div>
          <h3
            class="text-lg font-semibold mb-2 flex items-center gap-2 text-blue-700"
          >
            <i class="fas fa-map-marker-alt"></i> Address
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <input
              type="text"
              name="addressStreet"
              placeholder="Street"
              class="w-full border rounded px-3 py-2"
            />
            <input
              type="text"
              name="addressCity"
              placeholder="City"
              class="w-full border rounded px-3 py-2"
            />
            <input
              type="text"
              name="addressState"
              placeholder="State"
              class="w-full border rounded px-3 py-2"
            />
            <input
              type="text"
              name="addressZipCode"
              placeholder="Zip Code"
              class="w-full border rounded px-3 py-2"
            />
          </div>
        </div>

        <!-- Emergency Contact -->
        <div>
          <h3
            class="text-lg font-semibold mb-2 flex items-center gap-2 text-blue-700"
          >
            <i class="fas fa-user-shield"></i> Emergency Contact
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <input
              type="text"
              name="emergencyName"
              placeholder="Name"
              class="w-full border rounded px-3 py-2"
            />
            <input
              type="text"
              name="emergencyRelation"
              placeholder="Relation"
              class="w-full border rounded px-3 py-2"
            />
            <input
              type="text"
              name="emergencyPhone"
              placeholder="Phone"
              class="w-full border rounded px-3 py-2"
            />
          </div>
        </div>

        <!-- Insurance -->
        <div>
          <h3
            class="text-lg font-semibold mb-2 flex items-center gap-2 text-blue-700"
          >
            <i class="fas fa-briefcase-medical"></i> HMO Info
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <input
              type="text"
              name="insuranceProvider"
              placeholder="Provider"
              class="w-full border rounded px-3 py-2"
            />
            <input
              type="text"
              name="policyNumber"
              placeholder="Policy Number"
              class="w-full border rounded px-3 py-2"
            />
            <input
              type="text"
              name="groupNumber"
              placeholder="Group Number"
              class="w-full border rounded px-3 py-2"
            />
          </div>
          <div class="mt-3">
            <label class="inline-flex items-center text-sm">
              <input
                type="checkbox"
                name="insured"
                value="true"
                class="mr-2"
                checked
              />
              <span
                ><i class="fas fa-check-circle text-green-500 mr-1"></i>Mark as
                HMO</span
              >
            </label>
          </div>
        </div>

        <!-- Submit -->
        <div class="text-right mt-6">
          <button
            type="submit"
            class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition duration-200"
          >
            <i class="fas fa-paper-plane mr-2"></i> Submit Patient
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
