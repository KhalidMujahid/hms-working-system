<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add New User | Admin | EHRMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      crossorigin="anonymous"
    />
  </head>

  <body class="bg-gray-100 text-gray-800 min-h-screen flex">
    <!-- Sidebar -->
    <aside
      class="w-64 bg-white border-r shadow-lg hidden md:flex flex-col min-h-screen"
    >
      <!-- Sidebar Header -->
      <div class="p-6 border-b flex items-center justify-center">
        <h2 class="text-xl font-bold text-blue-700 flex items-center gap-2">
          <i class="fas fa-user-shield text-2xl"></i>
          <span class="tracking-wide">Admin Panel</span>
        </h2>
      </div>

      <!-- Navigation -->
      <nav
        class="flex flex-col p-4 space-y-1 text-sm font-medium text-gray-700"
      >
        <!-- Dashboard -->
        <a
          href="/admin/dashboard"
          class="flex items-center gap-3 px-4 py-3 rounded-xl transition hover:bg-blue-50 hover:text-blue-700 group relative"
        >
          <span
            class="absolute left-0 h-full w-1 bg-blue-600 rounded-r opacity-0 group-hover:opacity-100 transition"
          ></span>
          <i
            class="fas fa-home text-base text-blue-600 group-hover:scale-110 transition"
          ></i>
          <span>Dashboard</span>
        </a>

        <!-- Manage Users -->
        <a
          href="/admin/manage-users"
          class="flex items-center gap-3 px-4 py-3 rounded-xl transition hover:bg-blue-50 hover:text-blue-700 group relative"
        >
          <span
            class="absolute left-0 h-full w-1 bg-blue-600 rounded-r opacity-0 group-hover:opacity-100 transition"
          ></span>
          <i
            class="fas fa-users-cog text-base text-blue-600 group-hover:scale-110 transition"
          ></i>
          <span>Manage Users</span>
        </a>

        <!-- Logs -->
        <a
          href="/admin/logs"
          class="flex items-center gap-3 px-4 py-3 rounded-xl transition hover:bg-blue-50 hover:text-blue-700 group relative"
        >
          <span
            class="absolute left-0 h-full w-1 bg-blue-600 rounded-r opacity-0 group-hover:opacity-100 transition"
          ></span>
          <i
            class="fas fa-clipboard-list text-base text-blue-600 group-hover:scale-110 transition"
          ></i>
          <span>Logs</span>
        </a>

        <!-- Reports -->
        <a
          href="/admin/reports"
          class="flex items-center gap-3 px-4 py-3 rounded-xl transition hover:bg-blue-50 hover:text-blue-700 group relative"
        >
          <span
            class="absolute left-0 h-full w-1 bg-blue-600 rounded-r opacity-0 group-hover:opacity-100 transition"
          ></span>
          <i
            class="fas fa-chart-line text-base text-blue-600 group-hover:scale-110 transition"
          ></i>
          <span>Reports</span>
        </a>

        <!-- Divider -->
        <div class="border-t border-gray-200 my-4"></div>

        <!-- Logout -->
        <a
          href="/auth/logout"
          class="flex items-center gap-3 px-4 py-3 text-red-600 rounded-xl hover:bg-red-50 transition"
        >
          <i class="fas fa-sign-out-alt text-base"></i>
          <span>Logout</span>
        </a>
      </nav>
    </aside>

    <!-- Main content -->
    <main class="flex-1 p-6 bg-gray-50 min-h-screen">
      <div class="max-w-2xl mx-auto bg-white p-8 rounded-2xl shadow-lg">
        <h1 class="text-3xl font-extrabold text-center text-gray-800 mb-8">
          <i class="fas fa-user-plus text-blue-600 mr-2"></i> Add New User
        </h1>

        <form action="/admin/add-user" method="POST" class="space-y-6">
          <!-- Username -->
          <div>
            <label
              for="username"
              class="block text-sm font-medium text-gray-700 mb-1"
            >
              Username
            </label>
            <input
              type="text"
              name="username"
              id="username"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"
              required
            />
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-1"
            >
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"
              required
            />
          </div>

          <!-- Password -->
          <div>
            <label
              for="password"
              class="block text-sm font-medium text-gray-700 mb-1"
            >
              Password
            </label>
            <input
              type="password"
              name="password"
              id="password"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"
              required
            />
          </div>

          <!-- Role -->
          <div>
            <label
              for="role"
              class="block text-sm font-medium text-gray-700 mb-1"
            >
              Role
            </label>
            <select
              name="role"
              id="role"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"
              required
            >
              <option value="">-- Select Role --</option>
              <% const roles = ["admin", "doctor", "nurse", "pharmacist", "lab",
              "receptionist", "hmo", "frontdesk"]; %> <% roles.forEach(function
              (r) { %>
              <option value="<%= r %>">
                <%= r.charAt(0).toUpperCase() + r.slice(1) %>
              </option>
              <% }); %>
            </select>
          </div>

          <!-- Status -->
          <div>
            <label
              for="status"
              class="block text-sm font-medium text-gray-700 mb-1"
            >
              Status
            </label>
            <select
              name="status"
              id="status"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"
              required
            >
              <option value="1">Active</option>
              <option value="0">Inactive</option>
            </select>
          </div>

          <!-- Action Buttons -->
          <div class="flex items-center justify-between pt-4">
            <a
              href="/admin/manage-users"
              class="text-gray-500 hover:text-blue-600 text-sm inline-flex items-center transition"
            >
              <i class="fas fa-arrow-left mr-1"></i> Back to User List
            </a>
            <button
              type="submit"
              class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-2 rounded-lg transition flex items-center gap-2"
            >
              <i class="fas fa-user-plus"></i> Add User
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
