<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Select Patient for Observation | EHRMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/a2e0c5e6f6.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-gray-100 min-h-screen p-6 font-sans">
    <div class="max-w-5xl mx-auto bg-white p-8 rounded-lg shadow-md">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800">
          ðŸ©º Select Patient for Observation
        </h1>
        <a
          href="/doctor/dashboard"
          class="text-sm text-blue-600 hover:underline flex items-center"
        >
          <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
        </a>
      </div>

      <% if (patients.length === 0) { %>
      <div class="text-center text-gray-500 py-8">
        <i class="fas fa-user-times text-3xl mb-2"></i>
        <p>No patients found.</p>
      </div>
      <% } else { %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th
                class="px-6 py-3 text-left text-sm font-semibold text-gray-600 uppercase"
              >
                Patient Name
              </th>
              <th
                class="px-6 py-3 text-left text-sm font-semibold text-gray-600 uppercase"
              >
                Gender
              </th>
              <th
                class="px-6 py-3 text-left text-sm font-semibold text-gray-600 uppercase"
              >
                Phone
              </th>
              <th
                class="px-6 py-3 text-center text-sm font-semibold text-gray-600 uppercase"
              >
                Action
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-100">
            <% patients.forEach(patient => { %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 text-gray-800 font-medium">
                <%= patient.firstName %> <%= patient.lastName %>
              </td>
              <td class="px-6 py-4 capitalize text-gray-700">
                <%= patient.gender %>
              </td>
              <td class="px-6 py-4 text-gray-700"><%= patient.phone %></td>
              <td class="px-6 py-4 text-center">
                <a
                  href="/doctor/observations/new/<%= patient._id %>"
                  class="inline-flex items-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm shadow"
                >
                  <i class="fas fa-notes-medical mr-2"></i>
                  Add Observation
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
  </body>
</html>
